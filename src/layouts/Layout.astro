---
import Header from '../components/Header.astro'
import Favicon from '../../favicon.png'
import '../styles.css'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="You have found the portfolio of Alvaro Cervan. Full Stack Web Developer, self taught with determination and hands on to get the job done">
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href={Favicon} type="image/x-icon">
		<link rel="stylesheet" href="style.css">
		<title>{title}</title>
	</head>
	<body>
		<Header title={title}/>
		<slot />
	</body>
</html>
